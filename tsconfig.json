
{
    "compilerOptions": {
      "jsx": "react-jsx",        
      "module": "esnext",
      "target": "es6",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src"] // Ensure .d.ts files are included
  }